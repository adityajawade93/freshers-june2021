{
    "env": {
        "browser": true,
        "es2021": true,
        "jest":true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console":"off",
        "linebreak-style":"off",
        "no-underscore-dangle":"off",
        "no-plusplus":"off",
        "radix":"off",
        "no-unused-vars":"off",
        "import/extensions":"off",
        "new-cap":"off",
        "camelcase":"off",
        "no-shadow":"off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "max-len":"off"
        
    },
    "settings": {
        "import/resolver": {
          "node": {
            "paths": ["src"],
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          }
        }
      }
    
}
