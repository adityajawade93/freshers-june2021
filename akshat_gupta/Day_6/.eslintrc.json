{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides": [
        {
            "files": [
                    "**/__tests__ /**",
                    "**/tests /**",
                    "**/test /**",
                    "**/*.{test,spec}.{js,jsx,ts,tsx,mdx}"
            ],
            "env": {
                "jest": true
            }
        }
    ]
}
